/* 搜索框 */
.search_row{
  height: 80rpx;
  background-color: #fff;
  display: flex;
  border: 1px solid #ccc;
}
.search_row input{
  flex: 1;
  height: 100%;
  line-height: 80rpx;
  padding-left: 20rpx;
}
.search_row button{
  width: 120rpx;
  height: 100%;
  font-size: 26rpx;
  padding: 0;
  line-height: 80rpx;
  border-radius: 0;
  border-left: 1px solid #ccc;
}

/* 搜索选项 */
.search_item{
  background-color: #fff;
  margin-top: 6rpx;
  padding: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 导航 */
.index_cates{
    display: flex;
}
.index_cates navigator{
    flex: 1;
    padding: 20rpx;
}
.index_cates image{
    width: 100%;
}
.floor_list{
    overflow: hidden;
    padding-bottom: 10rpx;
}
.floor_list navigator{
    float: left;
    width: 33.33%;
}
.floor_list navigator:nth-last-child(-n+4){
    height: 27.727112vw;
    padding-left: 10rpx;
}
.floor_list navigator:nth-last-child(-n+2){
    padding-top: 10rpx;
}
.floor_list image{
    width: 100%;
    height: 100%;
}